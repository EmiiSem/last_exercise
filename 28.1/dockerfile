# использование официального образа Python в качестве базового образа
FROM python:3.8

# установка переменных окружения
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Установка рабочего каталога внутри контейнера
WORKDIR /app

# Копирование всех файлов проекта внутрь контейнера
COPY . /app/

# Определение порта, который будет слушать контейнер
EXPOSE 8000

# Определение команды для запуска сервера приложения Django
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]